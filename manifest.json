{
    "manifest_version": 3,
    "name": "Hidden Element Detector",
    "version": "1.0",
    "description": "Detects hidden elements on the page",
    "permissions": ["scripting"],
    "content_scripts": [
      {
        "matches": ["<all_urls>"],          
        "js": ["content.js"],                
        "run_at": "document_idle"           
      }
    ],
    "host_permissions": ["<all_urls>"]
  }
  